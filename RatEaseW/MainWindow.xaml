<Window x:Class="RatEaseW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RatEaseW"
        mc:Ignorable="d"
        Title="MainWindow" Height="942.28" Width="525">
    <!--<UserControl.Resources>
        <Image x:Key="LeftArrow" Source.../>
    </UserControl.Resources>-->

    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="225"></RowDefinition>
            <RowDefinition Height="850"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid x:Name="ControlGrid" HorizontalAlignment="Left" Height="180" Margin="50,22,0,0" VerticalAlignment="Top" Width="400" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <Button Grid.Row="3" x:Name="LeftArrow" Content="&lt;&lt;" Click="LeftArrow_Click"/>
            <Button Grid.Row="3" Grid.Column="1" Content=">>" Click="MoveRight"/>
            <Button Grid.Row="2" Grid.Column="3" Content="Down" Click="MoveDown"/>
            <Button x:Name="Up" Grid.Row="1" Grid.Column="3" Click="Up_Click">Up</Button>
            <Button Grid.Row="2" Grid.Column="2" Content="thin" Height="26" VerticalAlignment="Bottom" Click="thinner"/>
            <Button x:Name="Extend" Grid.Row="3" Grid.Column="2" Content="extend" Click="extend"/>
            <Button Grid.Row="3" Grid.Column="3" Content="Start" Height="27" x:Name="BtnStart" VerticalAlignment="Bottom" Click="Start_Click" Unloaded="BtnStart_Unloaded" />
            <Button Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Content="Set Alert Sound" x:Name="SetAlertSound" FontFamily="Georgia" Click="SetAlertSound_Click"/>
            <Button Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Content="Set Clear Sound" x:Name="SetClearSound" FontFamily="Georgia" Click="SetClearSound_Click"/>
            <TextBox x:Name="tbSystemName" Grid.Row="0" Grid.Column="2" Text="SystemName" Grid.ColumnSpan="2" />
            <TextBox x:Name="txtInterval" Grid.Row="1" Grid.Column="0" IsEnabled="False"/>
            <TextBox x:Name="redCount" Grid.Row="1" Grid.Column="1"></TextBox>
            <Slider x:Name="Interval" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" ValueChanged="Interval_ValueChanged" Maximum="50" Minimum="1" SmallChange="1" LargeChange="10"></Slider>
            
            
            <Label Grid.Column="1" Content="SysName:" />
            <Button x:Name="SetREctangle" Grid.Column="4" Grid.Row="1" Content="Set Rectangle" HorizontalAlignment="Right" Width="67" Click="SetRectangle"/>
            <ComboBox Grid.Column="4" Grid.ColumnSpan="2" ItemsSource="{Binding CurrentData.CaptureMode}" />
            <TextBox x:Name="coord" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"></TextBox>
            
            <Button x:Name="pickOutput" Grid.Row="5" Grid.Column="0" Height="25" VerticalAlignment="Top" Click="pickOutput_Click">Set Output</Button>
            <Button x:Name="pickResults" Grid.Row="6" Grid.Column="0" Click="pickResults_Click">Result Folder</Button>
            <TextBox x:Name="outFolder" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3"></TextBox>
            <TextBox x:Name="resultFolder" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3"></TextBox>
        </Grid>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Width="26" Grid.Row="1" Height="510" BorderBrush="Azure" >
            <Image x:Name="VImage" Stretch="None" Source="{Binding CurrentData.VImg}"/>
        </Border>

        <StackPanel x:Name="images" Grid.Row="1" Grid.Column="0" >
            
        </StackPanel>
    </Grid>
   
    
</Window>
